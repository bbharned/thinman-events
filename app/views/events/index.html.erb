<div class="container">

<h1>ThinManager Events <%= link_to "Create New Event", new_event_path, class: "btn btn-default", style: "float:right;" %></h1>
<br /><br />
<% @events.each do |event| %>
    <div class="row" style="border-bottom:1px solid #333333; margin-bottom:10px;">
        <div class="col-md-3">
            <h4><%= link_to "#{event.title}", event_path(event) %></h4>
        </div>
        <div class="col-md-7">
            <p><%= event.description %></p>
        </div>
        <div class="col-md-1">
            <p><%= link_to "Edit", edit_event_path(event), class: "btn btn-default btn-sm" %></p>
        </div>
        <div class="col-md-1">
            <p><%= link_to 'Delete', event_path(event), method: :delete, 
                        data: {confirm: "Are you sure you want to delete this session?"}, 
                        class: "btn  btn-danger btn-sm", style: "color:#FFFFFF;" %></p>
        </div>
    </div>
<% end %>

</table>
</div>