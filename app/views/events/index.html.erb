<h1 class="page-header">ThinManager Events <%= link_to "Create New Event", new_event_path, class: "btn btn-default", style: "float:right;" %></h1>
<br /><br />
<% @events.each do |event| %>
    <div class="row well well-sm" style="max-width:100%; margin:auto; margin-bottom:10px;">
        <div class="row">
            <div class="col-md-12">
                <h4><%= link_to "#{event.title}", event_path(event) %></h4>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <p style="font-weight:bold;"><%= event.time.to_s(:time_display) %></p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <p><%= event.description %></p>
                <p class="small">created by: <%= event.user.firstname %> <%= event.user.lastname %></p>
                
            </div>
        </div>
        
        <hr style="margin-top:5px; margin-bottom:8px;" />
        <div class="row action-buttons">
            <div class="col-md-3 col-md-offset-9">
                <p><%= link_to "Edit", edit_event_path(event), class: "btn btn-default btn-sm" %> 
                    <%= link_to 'Delete', event_path(event), method: :delete, 
                            data: {confirm: "Are you sure you want to delete this session?"}, 
                            class: "btn  btn-danger btn-sm", style: "color:#FFFFFF;" %></p>
            </div>
            <div class="col-md-1">
               
            </div>
        </div>
    </div>
<% end %>

