<h1 class="page-header">Create New Category</h1>

<%= render 'shared/errors', obj: @category %>

<%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>

    <div class="form-group">
        <div class="control-label col-sm-1">
            <%= f.label :name %>
        </div>
        <div class="col-sm-5">
            <%= f.text_field :name, class: "form-control", placeholder: "Enter Category Name", autofocus: true %>
        </div>
    </div>

<br />

    <div class="col-sm-4 col-sm-offset-1">
        <%= f.submit(@category.new_record? ? "Create Category" : "Update Category", class: "btn btn-primary btn-lg")%>
    </div>
    
<% end %>